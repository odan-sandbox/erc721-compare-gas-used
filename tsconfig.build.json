{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "outDir": "dist",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "allowJs": true,
      "typeRoots": [
        "./node_modules/@types",
        "./types"
      ]
    },
    "include": [
      "./src/**/*.ts",
      "./types/**.ts",
      "./hardhat.config.js"
    ],
    "exclude": [
      "./src/**/*.spec.ts"
    ]
  }